{
  "locals": {
    "url": "http://localhost:8080",
    "name": "valantonini.com",
    "owner": "val antonini",
    "description": "A blog about all things programming by val antonini."
  },
  "ignore": [
    "assets"
  ],
  "filenameTemplate": "/{{ page.metadata.location }}/index.html",
  "plugins": [
    "./plugins/paginator.coffee",
    "wintersmith-sassy"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "pug": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 3,
    "articles": "posts"
  },
  "sass": {
    "debug": false,
    "includePaths": [
      "node_modules/",
      "content/styles"
    ]
  }
}

{
  "locals": {
    "url": "http://localhost:8080",
    "name": "valantonini.com",
    "owner": "val antonini",
    "description": "A blog about all things programming by val antonini."
  },
  "plugins": [
    "./plugins/paginator.coffee",
    "wintersmith-sassy"
  ],
  "require": {
    "typogr": "typogr"
  },
  "pug": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 3
  },
  "sass": {
    "debug": true,
    "includePaths": [
      "node_modules/spectre.css/src/",
      "content/styles"
    ]
  }
}

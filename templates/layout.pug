doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      link(rel="shortcut icon", type="image/png", href=contents.images['favicon.png'].url)
      link(rel='stylesheet', href=contents.styles['site.scss'].url)
      title
        block title
          = locals.name
  body
    block content
    block footer

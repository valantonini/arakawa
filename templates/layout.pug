doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      link(rel="shortcut icon", type="image/png", href=contents.images['favicon.png'].url)
      link(rel='stylesheet', href=contents.styles['site.scss'].url)
      script(src=contents.scripts['site.min.js'].url)
      title
        block title
          = locals.name
  body
    nav.navbar(role='navigation', aria-label='main navigation')
      .container
        .navbar-brand
          a(href="/", class="navbar-item")
            img(src=contents.images['logo.png'].url)
          a.navbar-burger.burger(role='button', aria-label='menu', aria-expanded='false', data-target='navbarBasicExample')
            span(aria-hidden='true')
            span(aria-hidden='true')
            span(aria-hidden='true')
        #navbarBasicExample.navbar-menu
          .navbar-start
            a.navbar-item
              | blog
            a.navbar-item
              | about
            a.navbar-item
              | resume
            a.navbar-item
              | contact
    main.section
      .container
        block content
        block footer

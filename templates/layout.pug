doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      link(rel="shortcut icon", type="image/png", href=contents.images['favicon.png'].url)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Anonymous+Pro:400|Merriweather:400')
      link(rel='stylesheet', href=contents.styles['site.scss'].url)
      title
        block title
          = locals.name
  body
    .watermark-wrap
      .off-canvas
        
        a(class="off-canvas-toggle btn btn-primary btn-action", href="#sidebar")
          i(class="icon icon-menu")
        
        #sidebar.off-canvas-sidebar
          //- side bar menu here
          a(href="#close") x

        a(class="off-canvas-overlay", href="#close")
     
        .off-canvas-content
          .container
            block content
            
            footer
              block footer   
              section
                a(href="#")
                  img(src=contents.images.icons.social['github.png'].url)
                a(href="/")
                  img(src=contents.images['logo.png'].url)
              section
                p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
                  a(href='https://github.com/jnordberg/wintersmith') Wintersmith

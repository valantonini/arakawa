doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      link(rel='stylesheet', href=contents.styles['site.scss'].url)
      title
        block title
          = locals.name
  body
    .watermark-wrap
      header.navbar
        section.navbar-section
          a(href="#").btn.btn-link blog
          a(href="#").btn.btn-link about
          a(href="#").btn.btn-link resume
          a(href="#").btn.btn-link services
          a(href="#").btn.btn-link contact
        
      div
        block content
      footer
        block footer
          section
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
